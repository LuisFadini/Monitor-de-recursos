{
  "name": "monitor-de-recursos",
  "version": "1.0.0",
  "description": "Um monitor de recursos simples feito em JavaScript",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "Monitor-de-recursos",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icone2.ico"
    },
    "nsis": {
      "installerIcon": "icone2.ico",
      "uninstallerIcon": "icone2.ico",
      "uninstallDisplayName": "Monitor de recusos",
      "allowToChangeInstallationDirectory": true
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "discord-rpc": "^4.0.1",
    "os-utils": "^0.0.14"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "electron": "^14.0.1",
    "electron-builder": "^22.11.7"
  }
}